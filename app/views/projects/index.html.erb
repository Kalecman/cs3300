<link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

<title>Jumbotron Template for Bootstrap</title>

<link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/jumbotron/">

<!-- Bootstrap core CSS -->
<link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="jumbotron.css" rel="stylesheet">
</head>

<body>

<main role="main">

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Projects</h1>
    <p>My name is Kaleb Chanza and I am a computer science student. These are my projects. Please take a look!</p>
   </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">

  <% @projects.each do |project| %>
    <div class="col-md-4" style = "border-style: solid;">
      <h2><%= project.title %></h2>
      <p><%= project.description %></p>
      <a class="btn btn-secondary"<%= link_to 'Show', project %></a>
      <% if model_signed_in? %>
       <a class="btn btn-secondary" <%= link_to 'Edit', edit_project_path(project) %></a>
      <a class="btn btn-secondary" <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></a>
     <% else %>
       
     <% end %>
      
    </div>
  <% end %>
  <div class="col-md-4" style = "border-style: solid; ">
    <div style = "margin: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);">
  <a class="btn btn-primary btn-lg" <%= link_to 'New Project', new_project_path %> </a>
    </div>

  </div>

  <hr>

</div> <!-- /container -->

</main>



  
